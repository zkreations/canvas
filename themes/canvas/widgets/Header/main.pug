//- Estructura limpia para el widget Header
//- @author zkreations

+widget("Header")
  b:includable#main
    //- MODOS DEL LOGO
    //-   * BEHIND: Detrás del título y la descripción
    //-   * REPLACE: En lugar del título y la descripción
    //-   * BEFORE_DESCRIPTION: Ubicar la descripción después de la imagen

    b:include(cond='data:image', name='image')
    b:include(cond='data:imagePlacement == "BEHIND"', name='title')
    b:include(cond='data:description and data:imagePlacement != "REPLACE"', name='description')

  b:includable#description
    <data:description/>

  b:includable#image
    a(expr:href='data:blog.homepageUrl')
      img(expr:alt='data:title',
          expr:height='data:height',
          expr:src='data:image',
          expr:width='data:width')

  b:includable#title
    a(expr:href='data:blog.homepageUrl') <data:title/>